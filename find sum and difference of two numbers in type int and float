#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int a,b,s1,d1;
    float c,d,s2,d2;
    scanf("%d",&a);
    scanf("%d",&b);
    scanf("%f",&c);
    scanf("%f",&d);
    s1=a+b;
    d1=a-b;
    s2=c+d;
    d2=c-d;
    printf("%d %d\n",s1,d1);
    printf("%.1f %.1f",s2,d2);   #"%.1f" denotes after the answer .1 decimal place ex:2.4+3.2=5.60 but output is 5.6 it will print 
                                     only one decimal if you want to print 2 decimal places you have to put "%.2f" instead of "%.1f" 
                                           
    
    
    return 0;
}
